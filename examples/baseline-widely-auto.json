    "baseline-query-mode": true,
    "detected-queries": ["baseline widely available"],
    "baseline-threshold": "widely",
    "strict-mode": true
  },
  "rules": {
    "css": {
      "baseline-threshold": "widely",
      "strict-mode": true
    },
    "javascript": {
      "baseline-threshold": "widely", 
