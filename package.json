{
  "name": "@baseline/github-action",
  "version": "1.0.0",
  "description": "GitHub Action for enforcing Baseline web feature compatibility",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=tests/integration",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest tests/integration --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "npm run build && npm run test:unit",
    "lint": "eslint src tests",
    "format": "prettier --write src tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/baseline/action"
  },
  "keywords": [
    "github-action",
    "baseline",
    "web-platform",
    "browser-compatibility",
    "ci-cd"
  ],
  "author": "Baseline",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "glob": "^10.3.10",
    "micromatch": "^4.0.5",
    "node-fetch": "^3.3.2",
    "parse5": "^7.1.2",
    "postcss": "^8.4.32",
    "postcss-selector-parser": "^6.0.15",
    "web-features": "^2.46.0"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.4",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^30.1.3",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
